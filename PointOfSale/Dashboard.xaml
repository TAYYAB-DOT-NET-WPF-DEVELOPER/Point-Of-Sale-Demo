<UserControl x:Class="PointOfSale.Dashboard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" 
             Background="White">
    <Grid>
        <!-- Add Labels, TextBoxes, and Button Here -->
        <Label Content="Label 1"  Style="{StaticResource CustomLabelStyle}"   Margin="10,10,0,0"/>
        <Label Content="Label 2" Style="{StaticResource CustomLabelStyle}"   Margin="10,40,0,0"/>
        <TextBox HorizontalAlignment="Left" Style="{StaticResource CustomTextBoxStyle}" Width="200" Margin="100,10,0,0"/>
        <TextBox HorizontalAlignment="Left" Style="{StaticResource CustomTextBoxStyle}"  Width="200" Margin="100,50,0,0"/>
        <Button Content="Submit"  Style="{StaticResource AttractiveButtonStyle}"   Width="75" Margin="100,70,0,0"/>
    </Grid>
</UserControl>
